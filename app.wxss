@import 'weui/weui.wxss';

.container {
  height         : 100%;
  display        : flex;
  flex-direction : column;
  align-items    : center;
  justify-content: space-between;
  box-sizing     : border-box;
}

.wxParse-img {
  display: block !important;
}

.space {
  height          : 20rpx;
  background-color: #F2f2f2;
}

.box-shadow {
  box-shadow: 0px 1px 1px #c8c8c8;
}

.shopping-cart-float {
  position        : fixed;
  right           : 15rpx;
  bottom          : 170rpx;
  width           : 80rpx;
  height          : 80rpx;
  background-color: #fff;
  text-align      : center;
  border-radius   : 50%;
  border          : 1rpx solid #ddd;
  box-shadow      : 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.shopping-cart-float image {
  width     : 44rpx;
  height    : 44rpx;
  margin-top: 17rpx;
}