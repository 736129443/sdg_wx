.address-bg {
  display: flex;
  align-items: center;
  position: relative;
}
.address-bg .point-img {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
}
.address-bg .begin::after {
  content: '';
  display: block;
  position: absolute;
  width: 2px;
  background: #f2f2f2;
  top: calc(50% + 10rpx);
  bottom: 0;
  left: 10rpx;
}
.address-bg .end::before {
  content: '';
  display: block;
  position: absolute;
  width: 2px;
  background: #f2f2f2;
  top: 0;
  bottom: calc(50% + 10rpx);
  left: 10rpx;
}
.address-bg .address-text-bg {
  flex: 1;
  display: flex;
  font-size: 14px;
  color: #333;
  padding: 20rpx;
  flex-direction: column;
}
.address-bg .address-text-bg .sub-address {
  font-size: 12px;
  color: #999;
}
