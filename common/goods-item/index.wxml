    <view class="goods-text-box">
        <view class="goods-title">
            <slot name="hot-icon"></slot>{{title}}
        </view>
        <slot name="red-border-label"></slot>
        <van-row custom-class="bottom-box">
            <van-col>ï¿¥</van-col>
