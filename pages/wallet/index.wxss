/* pages/wallet/index.wxss */
page {
  width : 100%;
  height: 100%;
}

view.van-icon-arrow-left {
  font-size: 44rpx;
  position : absolute;
  top      : 60rpx;
  left     : 20rpx;
}

.wallet {
  width           : 100%;
  min-height      : 100%;
  font-size       : 28rpx;
  color           : rgba(0, 0, 0, 0.65);
  background-color: #f8f8f8;
  box-sizing      : border-box;
}

.wallet-balance {
  background    : linear-gradient(to right, #FF688B, #FEA35A);
  width         : 100%;
  height        : 300rpx;
  padding       : 150rpx 50rpx;
  box-sizing    : border-box;
  font-size     : 34rpx;
  letter-spacing: 2rpx;
}

.balance {
  color: white;
}

.balance text {
  font-size  : 36rpx;
  font-weight: bold;
}

.balance-bar {
  background     : white;
  border-radius  : 12rpx;
  position       : relative;
  bottom         : -50rpx;
  box-shadow     : 0 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.1);
  display        : flex;
  justify-content: space-between;
  align-items    : center;
  letter-spacing : 4rpx;
}

.balance-bar .line {
  background: rgba(0, 0, 0, 0.2);
  width     : 2rpx;
  height    : 24rpx;
}

.balance-pay,
.balance-records {
  color      : rgba(0, 0, 0, 0.65);
  width      : 50%;
  height     : 150rpx;
  text-align : center;
  line-height: 150rpx;
  font-weight: bold;
}

.van-icon {
  position: relative;
  top     : 2rpx;
  color   : rgba(0, 0, 0, 0.5);
}

.recommend {
  background   : white;
  margin       : 140rpx 0 0 0;
  /* height    : calc(100% - 300rpx - 140rpx); */
}

.recommend-title {
  width          : 100%;
  color          : rgba(0, 0, 0, 0.65);
  border-bottom  : 2rpx solid rgba(0, 0, 0, 0.1);
  display        : flex;
  justify-content: center;
  align-items    : center;
  padding        : 20rpx 0;
}

.recommend-content::before,
.recommend-content::after {
  content   : '';
  display   : block;
  height    : 2rpx;
  width     : 16%;
  background: rgba(0, 0, 0, 0.1);
  margin    : 0 10rpx;
}

.recommend-content {
  width          : 50%;
  display        : flex;
  justify-content: center;
  align-items    : center;
}

.recommend-title image {
  width : 30rpx;
  height: 30rpx;
  margin: 0 6rpx 0 0;
}