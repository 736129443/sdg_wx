/* pages/payment/index.wxss */
page{
  height: 100%;
  color:rgba(0, 0, 0, .75);
  font-size: 34rpx;
}
.payment{
  min-height: 100%;
  width: 100%;
  background: #F4F4F4;
  position: relative;
  padding: 20rpx 0;
  box-sizing: border-box;
  letter-spacing: 2rpx;
}

.payment-price-bar{
  background: white;
  padding: 40rpx ;
  text-align: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .45);
}
.payment-price{
  color: rgba(0, 0, 0, .75);
}
.payment-price text{
  font-size: 34rpx;
  font-weight: bold;
}
.payment-type-bar{
  margin:20rpx 0 0 0;
  background: white;
  padding: 40rpx ;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .45);
}
.checke-box image{
  width: 50rpx;
  height:50rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
icon{
  position: relative;
  top:18rpx; 
  float: right;
}
.van-button{
  margin: 40rpx 0 20rpx 0;
}
.payment-title{
  padding: 0 10rpx;
  letter-spacing: 4rpx;
  color: rgba(0, 0, 0, 0.65);
  line-height: 50rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.paymentList{
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  min-width:150rpx;
  min-height:100rpx; 
  line-height: 100rpx;
  padding: 0 10rpx;
  margin:16rpx 10rpx 0 10rpx;
  box-sizing: border-box;
}
.button{
  padding: 10rpx 0;
  font-size: 30rpx;
  letter-spacing: 4rpx;
}
button{
  margin: 40rpx 0 0 0;
}