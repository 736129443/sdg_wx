/* pages/add-goods/add-goods.wxss */
page {
  width      : 100%;
  height     : 100%;
  /* overflow: auto; */
}

.add-goods {
  width     : 100%;
  height    : 100%;
  background: white;
  position  : relative;
}

.variety {
  color       : rgba(0, 0, 0, .6);
  margin-right: 20rpx;
}

.submit-box {
  padding: 30rpx;
}

.people {
  color       : rgba(0, 0, 0, .6);
  margin-right: 20rpx;
}

.van-cell-text {
  display        : flex;
  justify-content: flex-start;
  align-items    : center;
}

textarea {
  /* padding: 8rpx 0 0 0; */
}

.van-cell-texts {
  display        : flex;
  justify-content: flex-start;
  align-items    : flex-start;
}

.input {
  width   : 80%;
  position: relative;
}

.price-input-bg {
  display: flex;
}

.price-input {
  flex: 1;
}

.uploads {
  background: white;
  padding   : 4rpx;
}

.black-bg {
  position  : absolute;
  top       : 54px;
  background: rgba(0, 0, 0, .6);
  height    : calc(100% - 54px);
  box-sizing: border-box;
  z-index   : 99;
  width     : 100%;
  color     : #333;
  font-size : 14px;
}

.search-list-bg {
  background: #fff;
  /* padding   : 0 14rpx; */
  border    : 2rpx solid #eee;
  box-sizing: border-box;
  width     : 100%;
  max-height: 100%;
  overflow  : scroll;
}

.item-text {
  background: #fff;
  padding   : 24rpx 15rpx;
  box-sizing: border-box;
}

.line {
  background: #eee;
  height    : 1rpx;
  width     : 100%;
}